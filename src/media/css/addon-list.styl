@import 'lib';

//$promo-gradient = linear-gradient(to top, #9E1455, #601E78, #052659);
$promo-gradient = linear-gradient(to top, #5f187a, #022052);

// TODO: Use this for apps and move it in its own file.
.container-list {
    margin: 10px 0 0;
}

.addon-list {
    list-style: none;
    margin: -10px auto;
    max-width: 640px;

    > li {
        padding: 20px 15px;

        &:first-child {
            padding-top: 0;
        }
        &:nth-child(even) {
            background-color: $salt-flat-white;
        }
    }
    .mkt-addon-name {
        color: $tile-title;
        font-size: 20px;
        font-weight: 200;
        line-height: 21px;
    }
    .mkt-addon-button {
        display: inline-block;
        font-size: 12px;
        height: 28px;
        width: auto;
    }
}

.addon-promo {
    background: $promo-gradient;
    color: $white;
    margin: 0 0 20px 0;
    padding: 25px 15px 20px;
    text-align: center;

    h1 {
        font-weight: 500;
        line-height: 1.6;
    }
    p {
        line-height: 1.3;
    }
    img {
        display: inline-block;
        height: 55px;
        width: 65px;
        margin: 0 0 10px;
    }
}
