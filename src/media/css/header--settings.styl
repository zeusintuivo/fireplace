@import 'lib';

.header--settings-toggle {
    image-replacement('../img/nav/user.svg', 40px, 40px);
    background-size: 40px 140px;
    appearance: none;
    border: 0;
    cursor: pointer;
    display: none;
    position: relative;

    &.mkt-header-child--visible {
        background-position: 0 -100px;
    }
}

.mkt-header--actions .register {
    margin-left: 20px;
}

body:not(.logged-in) .header--settings--logged-in {
    display: none;
}

.logged-in .header--settings--logged-out {
    display: none;
}

@media $wide-tablet {
    .header--settings-toggle {
        display: inline-block;
    }
}
