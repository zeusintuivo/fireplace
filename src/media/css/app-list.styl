/*
App listing.
    - One column on mobile
    - Two columns on tablet.
    - Three columns on desktop (two when expanded).
*/
@import 'lib';

$border = 1px solid $tile-border;
$tile-padding-x = 50px;
$tile-padding-y = 20px;
$desktop-tile-padding = $tile-padding-y $tile-padding-x;

.app-list-page {
    min-height: 365px;
    padding: 10px 0;

    &.full > div {
        padding-top: 15px;
    }
}

[data-page-type~=app-list] {
    .spinner {
        position: relative;
        top: 35px;
    }
    .feed .feed-layout-list > .info {
        margin-left: 0;
    }
}

.app-list {
    list-style: none;
    min-height: 190px;

    // Masking element to cover the last row's bottom border.
    &:after {
        background: $white;
        bottom: 30px;
        content: "";
        display: block;
        height: 1px;
        left: 0;
        max-width: $desktop-content;
        position: absolute;
        width: 100%;
    }
    &.previews-expanded .app-list-app:not(.app-list-website) {
        padding-bottom: 40px;
    }
}

// After pseudo element hides the last bottom border when a list is paginated.
.paginated::after { bottom: 152px; }
.previews-expanded.paginated::after {
     bottom: 112px;

    +media--base-desktop() {
        bottom: 72px;
    }
}

.app-list-app {
    border-bottom: 1px solid $greyscale-light-grey;
    padding-bottom: 15px;
    padding-top: 15px;
}

// Hide rating on the "new" page. Most apps there have no rating.
[data-page-type~="new"] .mkt-tile .rating {
    display: none;
}

[data-page-type~="purchases"] {
    .app-list-filters,
    .compat-filter {
        display: none;
    }
    .app-list-filters-expand-wrapper {
        margin-left: 0;
    }
    section.full > div {
        padding-top: 0;
    }
}

section.langpacks > div {
    padding-top: 0;
}

.app-list-page .app-list {
    margin-top: -20px;
}

@media $base-tablet {
    .app-list,
    .app-list.only-logged-in {
        display: flex;
    }
    .app-list {
        flex-wrap: wrap;
        margin-top: 30px;
        opacity: 0;
        position: relative;

        &.paginated .app-list-app:last-child {
            border-right: 0;
        }
        &.previews-expanded .app-list-app {
            border-right: 0;
            padding: 20px 0 40px;
            width: 100%;

            // Specificity concession.
            +rtl() {
                border-right: 0;
                padding: 20px 0 40px;
            }
        }
        &:after {
            bottom: 0;
        }
        &.show-app-list {
            opacity: 1;
        }
    }
    .paginated:after {
        bottom: 72px;
    }
    .app-list-app {
        border-bottom: $border;
        border-right: $border;
        padding: $desktop-tile-padding;
        width: 50%;

        &:nth-child(2n) {
            border-right: 0;
            padding: $tile-padding-y 0 $tile-padding-y $tile-padding-x;

            +rtl() {
                border-right: $border;
                padding: $tile-padding-y $tile-padding-x $tile-padding-y 0;
            }
        }
        &:nth-child(2n + 1) {
            padding: $tile-padding-y $tile-padding-x $tile-padding-y 0;

            +rtl() {
                border-right: 0;
                padding: $tile-padding-y 0 $tile-padding-y $tile-padding-x;
            }
        }
        &:last-child {
            border-right: 0;
        }
    }
    [data-page-type~="purchases"] {
        .app-list-filters {
            display: block;
        }
        section.full > div {
            padding-top: 30px;
        }
    }
    .app-list-homescreens {
        .app-list-filters {
            display: none;
        }
    }
    .app-list-page .app-list {
        margin-top: 0;
    }
}

@media $base-desktop {
    .app-list-page {
        padding: 0;

        &.full > div {
            padding-top: 30px;
        }
    }
    .app-list {
        max-width: $desktop-content;

        &.paginated .app-list-app:last-child {
            border-right: 0;
        }
        &.previews-expanded {
            .app-list-app {
                border-right: 0;
                margin-bottom: 20px;
                padding: 20px 10px 50px 0;
                width: 50%;

                +rtl() {
                    border-left: 0;
                    padding: 20px 0 50px 10px;
                }
                &:nth-child(2n) {
                    padding: 20px 0 20px 10px;

                    +rtl() {
                        border-left: 0;
                        padding: 20px 10px 20px 0;
                    }
                }
            }
            .loadmore {
                margin-top: -21px;
            }
        }
    }
    body[data-page-type~=app-list] {
        .placeholder {
            clear: both;
        }
        .spinner {
            top: 0;
        }
    }
    .app-list-app {
        width: (100 / 3)%;

        +rtl() {
            border-left: $border;
        }
        &:nth-child(2n),
        &:nth-child(2n + 1) {
            padding: $desktop-tile-padding;

            // Specificity concession from tablet.
            +rtl() {
                padding: $desktop-tile-padding;
            }
        }
        &:nth-child(2n) {
            border-right: $border;

            +rtl() {
                border-right: 0;
            }
        }
        &:nth-child(3n) {
            border-right: 0;

            +rtl() {
                border-left: 0;
            }
        }
        &:last-child {
            border-right: 0;

            +rtl() {
                border-left: 0;
            }
        }
    }
}
